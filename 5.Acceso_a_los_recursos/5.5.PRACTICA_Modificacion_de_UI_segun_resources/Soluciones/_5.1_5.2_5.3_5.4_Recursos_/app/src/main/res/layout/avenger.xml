<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_color_1"
        android:layout_width="74dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="#F55555"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/ll_color_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_color_2"
        android:layout_width="74dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="#C44444"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/ll_color_3"
        app:layout_constraintStart_toEndOf="@+id/ll_color_1"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_color_3"
        android:layout_width="74dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="#933333"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/ll_color_4"
        app:layout_constraintStart_toEndOf="@+id/ll_color_2"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_color_4"
        android:layout_width="74dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="#622222"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/ll_color_5"
        app:layout_constraintStart_toEndOf="@+id/ll_color_3"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_color_5"
        android:layout_width="74dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:background="#311111"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_avenger"
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>